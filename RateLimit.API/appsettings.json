  "IpRateLimiting": {
    "QuotaExceededResponse": {
      "Content": "{{\"mesaj\":\"Ýstek limiti aþýldý.\",\"Detay\":\"Ýzin verilen istek sayýsý {1}'de {0} istektir. {2} sonra tekrar deneyiniz\"}}",
      "ContentType": "application/json"
    },
    "EnableEndpointRateLimiting": true,
    // "RealIpHeader": "x-ip",
    "StackBlockedRequests": false,
    "HttpStatusCode": 429,
    //"IpWhitelist": [ "127.0.0.1" ],
    "ClientIdHeader": "X-ClientId",
    "ClientWhitelist": [ "client-1" ],
    "EndpointWhiteList": [ "put:/api/product" ],
    "GeneralRules": [
      {
        "Endpoint": "*:/api/product",
        "Period": "20s",
        "Limit": 2
      },
      {
        "Endpoint": "*:/api/product/*", // bütün hepsini [ ] arasýnda yapabilirsin. /api/controller diyerek diðer kontrollerada limit atanýr. *: yerine GET:,POST: yazýlabilir.Controllerdan sonra parametre varsa api/product/* þeklinde yazýlýr.
        "Period": "30s",
        "Limit": 5
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*"
}
